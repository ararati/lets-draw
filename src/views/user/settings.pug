extends ../layouts/app

block content
    div(class='container container-small mt-5' style='max-width:400px')
        include ../components/form-errors/index
        div(class='card')
            div(class='card-header') My settings
            div(class='card-body')
                form(method='POST')
                    div(class='form-group')
                        label Name
                        input(type='text' class='form-control' name='name' value=authName placeholder='Enter your new name')

                    button(type='submit' class='btn btn-lg btn-block btn-primary') Save changes
