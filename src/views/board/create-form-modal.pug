#boardCreateModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='boardCreateModal', aria-hidden='true')
    .modal-dialog.modal-sm.modal-dialog-centered
        .modal-content
            .modal-header
                h5#exampleModalLabel.modal-title Create canvas
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
            .modal-body
                form(method='POST' action='/board/create')
                    .form-group
                        label.col-form-label-sm Name for canvas
                        input.form-control(type='text' name = 'name' placeholder='Enter any name')
                    .form-row
                        .form-group.col-md-6
                            label.col-form-label-sm Width
                            input.form-control(type='text' name = 'width' placeholder='In pixels')
                        .form-group.col-md-6
                            label.col-form-label-sm Height
                            input.form-control(type='text' name = 'height' placeholder='In pixels')
                    input.btn.btn-primary.btn-block(type='submit' value='Create canvas')
